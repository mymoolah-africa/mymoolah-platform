{
  "name": "mymoolah-portal-system",
  "version": "1.0.0",
  "description": "MyMoolah Admin Portal (MMAP) - Multi-role portal system for suppliers, clients, merchants, and resellers",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:suppliers\" \"npm run dev:clients\" \"npm run dev:merchants\" \"npm run dev:resellers\"",
    "dev:admin": "cd admin/frontend && npm run dev",
    "dev:suppliers": "cd suppliers/frontend && npm run dev",
    "dev:clients": "cd clients/frontend && npm run dev",
    "dev:merchants": "cd merchants/frontend && npm run dev",
    "dev:resellers": "cd resellers/frontend && npm run dev",
    "build": "npm run build:admin && npm run build:suppliers && npm run build:clients && npm run build:merchants && npm run build:resellers",
    "build:admin": "cd admin/frontend && npm run build",
    "build:suppliers": "cd suppliers/frontend && npm run build",
    "build:clients": "cd clients/frontend && npm run build",
    "build:merchants": "cd merchants/frontend && npm run build",
    "build:resellers": "cd resellers/frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "migrate": "cd backend && npx sequelize-cli db:migrate",
    "seed": "cd backend && npx sequelize-cli db:seed:all",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "npm run test:admin && npm run test:suppliers && npm run test:clients && npm run test:merchants && npm run test:resellers",
    "test:admin": "cd admin/frontend && npm test",
    "test:suppliers": "cd suppliers/frontend && npm test",
    "test:clients": "cd clients/frontend && npm test",
    "test:merchants": "cd merchants/frontend && npm test",
    "test:resellers": "cd resellers/frontend && npm test"
  },
  "workspaces": [
    "admin/frontend",
    "suppliers/frontend",
    "clients/frontend",
    "merchants/frontend",
    "resellers/frontend",
    "shared",
    "backend"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.37.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "socket.io": "^4.7.4",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "mymoolah",
    "admin-portal",
    "fintech",
    "banking",
    "mojaloop",
    "multi-role",
    "dual-role",
    "supplier-portal",
    "client-portal",
    "merchant-portal",
    "reseller-portal"
  ],
  "author": "MyMoolah Digital Solutions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mymoolah/portal-system"
  },
  "engines": {
    "node": ">=18.20.8",
    "npm": ">=9.0.0"
  }
}
